{
  "version": 2,
  "framework": "create-react-app",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/react",
      "config": {
        "distDir": "build",
        "runtime": "nodejs16.x",
        "env": {
          "NPM_FLAGS": "--legacy-peer-deps --force",
          "NODE_ENV": "production",
          "CI": "false"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000" },
      "dest": "/static/$1"
    },
    {
      "src": "/_next/static/(.*)",
      "dest": "/_next/static/$1"
    },
    {
      "src": "/((?!api|static|.*\\..*|_next).*)",
      "dest": "/index.html",
      "status": 200
    }
  ]
}